# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Service (Anthropic Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Email Configuration (Gmail/SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM="Forward Horizon AI Agent" <your_email@gmail.com>

# Business Configuration
BUSINESS_NAME="Forward Horizon"
BUSINESS_PHONE="(310) 488-5280"
BUSINESS_EMAIL="info@forwardhorizon.com"

# Security
MAX_DAILY_EMAILS=50
MEMORY_RETENTION_DAYS=30

# Feature Flags
DEBUG=false
ENABLE_WEB_SCRAPING=true
ENABLE_AUTO_RESPONSES=true

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_newrelic_key